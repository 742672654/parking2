<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="165dp">


    <RelativeLayout
        android:id="@+id/listview_prrkingindex_item_RelativeLayout_Left"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2.5dp"
        android:background="@color/idle_green"
        android:textAllCaps="false">


        <TextView
            android:id="@+id/prkingind_p"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_below="@id/yuan_left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-33dp"
            android:text="P"
            android:textColor="@color/white"
            android:textSize="125dp" />

        <ImageView
            android:id="@+id/yuan_left"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/bt_shape3" />

        <TextView
            android:id="@+id/id_number_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="01"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/car_fang_left"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@id/yuan_left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/bt_shape3" />

        <TextView
            android:id="@+id/car_number_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yuan_left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="23dp" />

        <TextView
            android:id="@+id/start_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_fang_left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="开始时间: 6-21 09:30"
            android:textColor="@color/list_bg_gray"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/earnest_money_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="预缴: 0"
            android:textColor="@color/list_bg_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/arrears_money_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="待补: 0"
            android:textColor="@color/list_bg_gray"
            android:visibility="invisible"
            android:textSize="15dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/listview_prrkingindex_item_RelativeLayout_Right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="3"
        android:textAllCaps="false"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/yuan_right"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/bt_shape3" />

        <TextView
            android:id="@+id/prkingind_p2"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_below="@id/yuan_right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-33dp"
            android:text="P"
            android:textColor="@color/white"
            android:textSize="125dp" />


        <TextView
            android:id="@+id/id_number_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="01"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/car_fang_right"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@id/yuan_right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/bt_shape3" />

        <TextView
            android:id="@+id/car_number_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yuan_right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="23dp" />

        <TextView
            android:id="@+id/start_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_fang_right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/list_bg_gray"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/earnest_money_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/list_bg_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/arrears_money_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/list_bg_gray"
            android:textSize="15dp" />
    </RelativeLayout>


</LinearLayout>