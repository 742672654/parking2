<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- visibility="gone"不可见不占用位置，版本号  -->
    <EditText
        android:id="@+id/editText_edition"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="1.0"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#29AAFD">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:text="泉州尚宝智慧泊车系统"
            android:textColor="@color/nfc_dialog" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/text"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/log" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@drawable/login_button_shape2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="15dip"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_weight="0.7"
            android:scaleType="fitCenter"
            android:src="@mipmap/account" />

        <EditText
            android:id="@+id/editText_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginLeft="5dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:autoSizeTextType="uniform"
            android:hint="请输入账号"
            android:maxLength="20"
            android:singleLine="true"
            android:text=""
            android:background="@null"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/imageView_cuowu"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:layout_weight="0.6"
            android:scaleType="fitCenter"
            android:src="@mipmap/cuowu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@drawable/login_button_shape2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:layout_weight="0.7"
            android:scaleType="fitCenter"
            android:src="@mipmap/pass" />

        <EditText
            android:id="@+id/editText_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginLeft="5dip"
            android:inputType="textPassword"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="请输入密码"
            android:autoSizeTextType="uniform"
            android:maxLength="20"
            android:text=""
            android:singleLine="true"
            android:background="@null"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/imageView_yanjingbi"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:layout_weight="0.6"
            android:scaleType="fitCenter"
            android:src="@mipmap/yanjingbi" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="70dip"
        android:layout_marginRight="70dip"
        android:layout_weight="0.35">

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dip"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="7dip"
            android:text="立即登录"
            android:background="@drawable/button_transformation"
            android:textAllCaps="false"
            android:textColor="@color/nfc_dialog"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/relative_btn5"
            android:text="\@泉州市尚宝网络科技有限公司出品"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</LinearLayout>
